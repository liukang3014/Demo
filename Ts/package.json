{
  "name": "ts-config",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "tsc ./src/index && node ./src/index  "
  },
  "include": [
    "/"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "module",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "target": "esnext",
    "strict": true,
    "outDir": "app",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "dependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "typescript": "^5.2.2"
  }
}
